
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eventos del Universo</title>
</head>
<body>
    @{
        var universeEvent = ViewData["UniverseEvent"] as _000universe.Models.UniverseEvent; // Conversión para objectos
    }

    <h1>@ViewData["Title"]</h1>
    <table style="font-family: Arial">
        <tr>
            <td>Evento ID:</td>
            <td>@universeEvent.Id</td>
        </tr>
        <tr>
            <td>Nombre Del Evento: </td>
            <td>@universeEvent.EventName</td>
        </tr>
        <tr>
            <td>Año Del Evento: </td>
            <td>@universeEvent.EventYear</td>
        </tr>
        <tr>
            <td>Desviación Estandar: </td>
            <td>@universeEvent.StandardDeviation</td>
        </tr>
        <tr>
            <td>Descripción Del Evento: </td>
            <td>@universeEvent.ItemDescription</td>
        </tr>
        <tr>
            <td>Estado: </td>
            <td>@universeEvent.Active</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>
    </table>
</body>
</html>