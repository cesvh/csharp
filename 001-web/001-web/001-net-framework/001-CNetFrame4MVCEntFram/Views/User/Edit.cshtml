@model _001_CNetFrame4MVCEntFram.Models.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken();
            @*<div class="form-group">*@

                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessage("Email", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Password)
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(m => m.Edad, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Edad, new { @class = "form-control" })
                @Html.ValidationMessage("Edad", new { @class = "text-danger" })
                <br />
                <br />
                <div style="text-align: right">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                </div>
            @*</div>*@
        }
    </div>
</div>